{
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepare": "husky",
    "bundle-api-docs": "npx @apidevtools/swagger-cli bundle -o storage/api-docs/api-docs.yaml -t yaml storage/api-docs/index.yaml"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "axios": "^1.6",
    "husky": "^9.0.11",
    "laravel-vite-plugin": "^1.0.2",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.19",
    "postcss": "^8.4.38",
    "vite": "^5.2.7"
  },
  "lint-staged": {
    "**/*.md": "markdownlint --ignore README.md --ignore node_modules --ignore tools --ignore vendor .",
    "**/*.{yaml,yml,yamllint}": "yamllint --strict .",
    "storage/api-docs/**/*.yaml": "npm run bundle-api-docs"
  }
}
